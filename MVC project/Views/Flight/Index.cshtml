@using PagedList;
@using PagedList.Mvc;
@model IPagedList<MVC_project.ViewModels.FlightVM>

@{
    ViewBag.Title = "Index";
}
<h2>Flights</h2>

<p>
    @Html.ActionLink("Create New", "CreateFlight")
</p>
<p>
    @using (Html.BeginForm("SearchFlights", "Flight", FormMethod.Post))
    {
        <input type="text" id="destination" name="destination" runat="server">
        <input type="submit" value="Search Flights" />
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().FlightNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().BoardingTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().NumberOfSeats)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().From)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().To)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Gate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().TicketPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().PilotId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Id)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FlightNumber)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.BoardingTime)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NumberOfSeats)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.From)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.To)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Gate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TicketPrice)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PilotId)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>
@Html.PagedListPager(Model, page => Url.Action("Index",new {page }),
new PagedListRenderOptions(){Display=PagedListDisplayMode.IfNeeded,
DisplayPageCountAndCurrentLocation = true})